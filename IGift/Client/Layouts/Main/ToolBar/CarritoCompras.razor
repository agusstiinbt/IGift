<div>
    <MudBadge Color="Color.Error" Visible=@_visible Content=@_peticiones Overlap="true" Bordered="true" Class="mx-6 my-4">
        <MudIcon @onclick="ToggleOpen" Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Warning" />
    </MudBadge>

    <MudPopover Open="_open" OverflowBehavior="OverflowBehavior.FlipAlways" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" Paper="false">
        <MudPaper Outlined="true" Class="px-4 py-8">

            <MudNavMenu>

                <MudList T="string">

                    @foreach (var n in list)
                    {
                        <MudListItem>
                            <AvatarContent>
                                <MudAvatar>
                                    @*   TODO  Esto puede ser el dia de mañana la imagen del producto descargada y traida al cliente, o sea local storage, o en donde mejor convenga
                      <MudImage Src="images/mony.jpg" /> *@
                                    <MudIcon Icon="@Icons.Material.Filled.Work" Color="Color.Primary" />
                                </MudAvatar>
                            </AvatarContent>
                            <ChildContent>
                                @n.Descripcion: @n.Monto @n.Moneda
                            </ChildContent>
                        </MudListItem>
                    }

                </MudList>


            </MudNavMenu>

        </MudPaper>
    </MudPopover>
</div>
