<ContenedorLogoPrincipal />

<AuthorizeView>

    <Authorized>
        <CascadingValue Value="EstiloBotones">
            <BarraHerramientasConectado userName="@NombreUsuario" />
        </CascadingValue>
    </Authorized>

    <NotAuthorized>
        <CascadingValue Value="EstiloBotones">
            <BarraHerramientasDesconectado />
        </CascadingValue>
    </NotAuthorized>

</AuthorizeView>


@code {
    [CascadingParameter]
    public string EstiloBotones { get; set; } = "color:#FFCC09";
}

