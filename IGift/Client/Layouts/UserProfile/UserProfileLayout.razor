@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="@_dense">
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="_clipMode" Elevation="1" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
                Mi cuenta
            </MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavGroup Title="Compras" Icon="@Icons.Material.Filled.ShoppingBag">
                <MudNavLink Match="NavLinkMatch.All">Compras</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Preguntas</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Opiniones</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Favoritos</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Busquedas guardadas</MudNavLink>
            </MudNavGroup>

            <MudNavGroup Title="Ventas" Icon="@Icons.Material.Filled.Sell">
                <MudNavLink Match="NavLinkMatch.All">Resumen</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Novedades</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Publicaciones</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Preguntas</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Ventas</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Atencion postventa</MudNavLink>
            </MudNavGroup>

            <MudNavGroup Title="Marketing" Icon="@Icons.Material.Filled.CardMembership">
                <MudNavLink Match="NavLinkMatch.All">Central de marketing</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Publicidad</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Promociones</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Mi pagina</MudNavLink>
            </MudNavGroup>

            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Stars">Prestamos</MudNavLink>

            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Person">Mi perfil</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _dense = false;
    private DrawerClipMode _clipMode = DrawerClipMode.Always;
    public string Style = "height:100vh;overflow:auto;background-color:#181A20";

    protected override async Task OnInitializedAsync()
    {
        await InvokeAsync(() =>
        {
            Console.WriteLine("hello world");
        });
    }


}