@page "/UserProfile"
@layout UserProfileLayout
@attribute [Authorize]
@using MudBlazor;

<MudStack>

    <MudPaper Class="pa-4">

        <MudStack Row="true">

            <MudFileUpload Accept=".png,.jpg,.jpeg" T="IBrowserFile" FilesChanged="UploadFiles">
                <ActivatorContent>
                    <MudBadge Origin="Origin.BottomRight" Icon="@Icons.Material.Filled.CameraAlt" Color="Color.Error" Overlap="true" Bordered="true" Class="mx-6 my-4">
                        <MudFab Label="@Iniciales" Style="@background" />
                    </MudBadge>
                </ActivatorContent>
            </MudFileUpload>

            <MudStack Justify="Justify.Center" Spacing="0">
                <MudText Typo="Typo.h6">@Nombre @Apellido</MudText>
                <MudText Typo="Typo.subtitle1">@Correo</MudText>
            </MudStack>

        </MudStack>

    </MudPaper>

    <MudPaper Class="pa-4">

        <MudStack Spacing="4">

            <MudButton Style="elevation:unset;box-shadow:none" Ripple="false" DropShadow="false" Variant="Variant.Text">


                <div style="box-shadow:none" class="d-flex flex-grow-1 gap-4">

                    <MudContainer Style="background-color:yellow;width:fit-content;height:fit-content" Class="py-8 ">
                        <MudBadge Style="background-color:green;" Origin="Origin.BottomRight" Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Overlap="true" Bordered="true">
                            <MudIconButton Style="border:double;border-radius:20px" Icon="@Icons.Material.Filled.Contacts" Color="Color.Info" />
                        </MudBadge>
                    </MudContainer>

                    <MudContainer Style="background-color:red" Class="py-8 ">

                        <MudText Align="Align.Left"><b>Informacion personal</b></MudText>
                        <MudText Inline="true" Align="Align.Left">Informacion de tu documento de identidad y tu actividad fiscal.</MudText>

                    </MudContainer>

                    <MudContainer Class="py-8  ">

                    </MudContainer>

                </div>


            </MudButton>

            <MudTextField T="string" Label="Card number" Mask="@(new PatternMask("0000 0000 0000 0000"))" />


            <MudStack Row="true">
                <MudTextField T="string" Label="Expires" Mask="@(new DateMask("MM/YY", 'Y', 'M'))" />
                <MudTextField T="string" Label="CVC" Mask="@(new PatternMask("000"))" />
            </MudStack>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DropShadow="false">
                <MudPaper>
                    Pay Now
                </MudPaper>
            </MudButton>
        </MudStack>

    </MudPaper>

</MudStack>
