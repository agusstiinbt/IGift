<MudPaper Elevation="0">
    <MudToolBar Style="background-color:#181A20">

        <MudButton Style="color:#828C9A">Ofertas</MudButton>
        <MudButton Style="color:#828C9A">Moda</MudButton>
        <MudButton Style="color:#828C9A">Peticiones</MudButton>
        <MudButton Style="color:#828C9A">Electrodomésticos</MudButton>
        <MudButton Style="color:#828C9A">Historial</MudButton>
        <MudButton Style="color:#828C9A">Ayuda</MudButton>
        <MudButton Style="color:#828C9A">Ofertas grandes</MudButton>

        <MudSpacer />

        <TogglePerfil userName=@userName />

        <Notificaciones />

        <CarritoCompras />

    </MudToolBar>
</MudPaper>


@code {

    public bool _open;

    public void ToggleOpen()
    {
        if (_open)
            _open = false;
        else
            _open = true;
    }

    private string MenuStyle = "visibility:collapse";
    private void ShowMenu()
    {
        if (!string.IsNullOrEmpty(MenuStyle))
        {
            MenuStyle = string.Empty;
        }
        else
        {
            MenuStyle = "visibility:collapse";
        }
    }

    bool _expanded;

    [Parameter]
    public string userName { get; set; }

}