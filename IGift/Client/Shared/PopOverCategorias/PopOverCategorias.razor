<MudPaper Class="mud-p-4" Elevation="0" Outlined="true" Style="border:none;background-color:transparent; text-align: center;">

    <!-- Elemento que activa el menú al pasar el mouse -->
    <MudButton @onmouseenter="ShowPopover"
               Style="cursor: pointer; padding: 20px 20px; display: inline-block; background-color: transparent;color:black">Categorias</MudButton>

    <!-- Popover para el menú -->
    <MudPopover Style="background-color:#D19D52" Open="_isPopoverOpen" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.BottomRight">
        <MudList T="string">
            @foreach (string item in AppConstants.Local.listaCategorias)
            {
                <MudListItem>@item</MudListItem>
            }
        </MudList>
    </MudPopover>

</MudPaper>
@code {

    private bool _isPopoverOpen = false;

    private void ShowPopover() =>
        _isPopoverOpen = !_isPopoverOpen;

}

